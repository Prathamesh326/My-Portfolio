{
    "version": 2,
    "builds": [
        {
            "src": "./index.py",
            "use": "@vercel/python",
            "config": { "runtime": "python3.12.4" }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"  // This allows access to your static files
        },
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ]
}
